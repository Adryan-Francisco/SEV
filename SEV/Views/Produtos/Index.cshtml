@model IEnumerable<SEV.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary">
            <i class="fas fa-box-open me-2"></i>Produtos
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i>Novo Produto
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Nome)</th>
                    <th class="text-end">@Html.DisplayNameFor(m => m.Preco)</th>
                    <th class="text-center">@Html.DisplayNameFor(m => m.QuantidadeEstoque)</th>
                    <th class="text-center" style="width: 140px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(mItem => item.Nome)</strong></td>
                        <td class="text-end">@item.Preco.ToString("C2")</td>
                        <td class="text-center">
                            <span class="badge @(item.QuantidadeEstoque > 0 ? "bg-success" : "bg-danger")">
                                @Html.DisplayFor(mItem => item.QuantidadeEstoque)
                            </span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Ações">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3 text-muted">
        <small>Total de @Model.Count() produtos cadastrados</small>
    </div>
</div>

@section Scripts {
    <script>
        // Ativa tooltips Bootstrap para os botões
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
