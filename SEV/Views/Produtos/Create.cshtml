@model SEV.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-success">
            <i class="bi bi-plus-circle me-2"></i>Cadastrar Produto
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Voltar
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuantidadeEstoque" class="form-label"></label>
                    <input asp-for="QuantidadeEstoque" type="number" class="form-control" />
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
