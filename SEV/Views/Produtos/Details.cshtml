@model SEV.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary">
            <i class="bi bi-info-circle me-2"></i>Detalhes do Produto
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Voltar
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4">@Model.Nome</h5>
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Nome</dd>

                <dt class="col-sm-3">Preço</dt>
                <dd class="col-sm-9">@Model.Preco.ToString("C2")</dd>

                <dt class="col-sm-3">Quantidade em Estoque</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.QuantidadeEstoque > 0 ? "success" : "danger")">
                        @Model.QuantidadeEstoque
                    </span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> Lista de Produtos
            </a>
        </div>
    </div>
</div>
