@model IEnumerable<SEV.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Lista de Vendas</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova Venda
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Produto)</th>
                <th>@Html.DisplayNameFor(model => model.First().Quantidade)</th>
                <th>@Html.DisplayNameFor(model => model.First().Data)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Produto?.Nome</td>
                    <td class="text-center">@item.Quantidade</td>
                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
